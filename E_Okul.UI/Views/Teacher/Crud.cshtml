@model E_Okul.UI.Models.TeacherModel

@{
    ViewData["Title"] = "Crud";
}

<h1>@Model.Head</h1>

<h4>Öğretmenler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Teachers.Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Teachers.FirstName" class="control-label">Ad :</label>
                <input asp-for="Teachers.FirstName" class="form-control" />
                <span asp-validation-for="Teachers.FirstName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Teachers.LastName" class="control-label">Soyad :</label>
                <input asp-for="Teachers.LastName" class="form-control" />
                <span asp-validation-for="Teachers.LastName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Teachers.Mail" class="control-label">Mail :</label>
                <input asp-for="Teachers.Mail" class="form-control" />
                <span asp-validation-for="Teachers.Mail" class="text-danger"></span>
            </div>
            <br />


            <div class="form-group">
                <span>Cinsiyet :</span>
                @foreach (var item in ViewBag.Gender as Dictionary<string, string>)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="@(item.Value)Gender" asp-for="Teachers.Gender" value="@item.Value">
                        <label class="form-check-label" asp-for="Teachers.Gender" for="@(item.Value)Gender">
                            @item.Key
                        </label>
                    </div>
                }
                <span class="text-danger" asp-validation-for="Teachers.Gender"></span>
            </div>



            <div class="form-group">
                <label asp-for="Teachers.BranchId" class="control-label">Branş Seçiniz :</label>
                <select asp-for="Teachers.BranchId" class="form-kontrol" name="Teachers.BranchId">
                    @foreach (var item in Model.Branches)
                    {
                        <option value="@item.Id">@item.BranchName</option>
                    }
                </select>
                <span asp-validation-for="Teachers.BranchId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Teachers.Password" class="control-label">Şifre :</label>
                <input type="password" asp-for="Teachers.Password" class="form-control" />
                <span asp-validation-for="Teachers.Password" class="text-danger"></span>
            </div>
            <br />


            @*
            <div class="form-group">
            <label asp-for="Teachers.Gender" class="control-label">Cinsiyet :</label>
            @foreach (var item in Model.Teachers)
            {
            @Html.RadioButtonFor(expression:model=>model.Gender, item.)
            }
            <span asp-validation-for="Teachers.Gender" class="text-danger"></span>
            </div>*@



            <br />
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Cls" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>Ders listesini görüntülemek için <a asp-action="List">buraya</a> tıklayınız.</p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
