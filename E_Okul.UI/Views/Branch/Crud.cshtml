@model E_Okul.UI.Models.BranchModel

@{
    ViewData["Title"] = "Crud";
}

<h1>@Model.Head</h1>

<h4>Dersler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Branches.Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Branches.BranchName" class="control-label"></label>
                <input asp-for="Branches.BranchName" class="form-control" />
                <span asp-validation-for="Branches.BranchName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="@Model.Text" class="@Model.Cls" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>Ders listesini görüntülemek için <a asp-action="List">buraya</a> tıklayınız.</p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
